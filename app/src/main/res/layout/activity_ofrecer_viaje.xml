<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ofrecer_viaje"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textView_ofrecerViaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ofrecer Viaje"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textView_ubicacion"
        android:layout_below="@id/textView_ofrecerViaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicación: "
        android:textSize="20dp"
        android:layout_margin="20dp"/>

    <EditText
        android:id="@+id/editTextRuta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView_ubicacion"
        android:hint="Ruta"
        android:layout_alignBaseline="@id/textView_ubicacion"/>

    <TextView
        android:id="@+id/textView_hora"
        android:layout_below="@id/textView_ubicacion"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora de salida: "
        android:textSize="20sp" />

    <Button
        android:id="@+id/ButtonTime"
        android:layout_toRightOf="@id/textView_hora"
        android:layout_alignBaseline="@id/textView_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00 AM"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textView_pasajeros"
        android:layout_below="@id/textView_hora"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de pasajeros: "
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/SpinnerPasajeros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView_pasajeros"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_alignTop="@+id/textView_pasajeros">
    </Spinner>

    <Button
        android:id="@+id/ButtonAceptar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Aceptar" />

</RelativeLayout>